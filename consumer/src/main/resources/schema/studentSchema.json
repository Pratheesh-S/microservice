{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "studentName": {
      "type": "string",
      "description": "name of the student",
      "minLength": 1
    },
    "studentLocation": {
      "type": "string",
      "description": "native place of student",
      "minLength": 1
    },
    "graduated": {
      "type": "boolean",
      "description": "Whether student is graduated or not"
    },
    "college": {
      "type": "object",
      "properties": {
        "collegeId": {
          "type": "integer",
          "description": "Uniquely represent the College"
        }
      },
      "required": [
        "collegeId"
      ]
    },
    "studentJoinYear": {
      "type": "string",
      "format": "date",
      "minLength": 1,
      "description": "Joining data of student"
    }
  },
  "required": [
    "studentName",
    "studentLocation",
    "graduated",
    "college",
    "studentJoinYear"
  ]
}
